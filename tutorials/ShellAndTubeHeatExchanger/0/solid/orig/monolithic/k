FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      k;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// solid region

dimensions      [1 1 -3 -1 0 0 0];

internalField   uniform 401;

boundaryField
{
    solid_to_inner
    {
        type            monolithicThermalDiffusivitySlave;
        remoteField     k;
        value           $internalField;
    }
    solid_to_outer
    {
        type            monolithicThermalDiffusivitySlave;
        remoteField     k;
        value           $internalField;
    }
    solid_to_domain1
    {
        type            zeroGradient;
    }
}

FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0/inner";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 283;

boundaryField
{
    outlet
    {
        type            zeroGradient;
    }
    inlet
    {
        type            fixedValue;
        value           $internalField; 
    }
    inner_to_solid
    {
        type                    monolithicTemperature;
        radiation               off;
        K                       k;
        remoteField             T;
        value                   $internalField;       
    }
    inner_to_domain1
    {
        type            zeroGradient;
    }
}



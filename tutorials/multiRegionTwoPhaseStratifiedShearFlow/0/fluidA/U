FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    location    "0";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 1e-06 0);

boundaryField
{
"proc.*"
{
	type	processor;
	value	uniform (0 0 0);
}
// no-slip at the walls parallel to the interface
    top
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }
// zero-gradient for inlet/outlet
    left
    {
        type            zeroGradient;
    }
    right
    {
        type            zeroGradient;
    }
// interfacial BC       
    interface
    {
        type                    interfaceCoupledVelocityFlux; 
        k                       "mu";
        neighbourRegionName     fluidB;
        neighbourPatchName      interfaceShadow;   
        neighbourFieldName      U;                     
        secondOrder             yes;
        nonOrthCorr             yes;
        value                   uniform (0 0 0);
    }    
    frontAndBack
    {
        type                    empty;
    }
}


// ************************************************************************* //

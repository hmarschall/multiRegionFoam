FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0/fluid";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [ 0 0 0 1 0 0 0 ];

internalField   uniform 273;

boundaryField
{
    Wall
    {
        type            fixedValue;
        value           uniform 283;
    }
    Symmetry
    {
        type            symmetryPlane;
        value           $internalField;
    }
    In
    {
        type            fixedValue;
        value           $internalField;
    }
    Out
    {
        type            zeroGradient;
    }
    fluid_to_solid
    {
        type                    regionCoupleTemperature;
        neighbourRegionName     solid;
        neighbourPatchName      solid_to_fluid;
        neighbourFieldName      T;
        K                       1.0;
        value                   $internalField;
    }
}


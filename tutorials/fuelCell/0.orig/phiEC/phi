FoamFile
{
    version         2.0;
    format          ascii;
    class           volScalarField;
    object          phi;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //


dimensions      [1 2 -3 0 0 -1 0];

internalField   uniform 0.7; // uniform (0.566711 0 0);

boundaryField
{

    interconnect0
    {
        type            fixedValue;
		value			uniform 0.7;
//         type            fixedGradient;
//         gradient        uniform 0;
    }

	phiEC_to_phiI0
    {
        type                    regionCoupledPotentialJump;
        interfaceType           currentTransferInterface;
        k              "sigma";                   // k is sigma here, needed in both, the jumpBC and the flux BC
        
        accType               fixed;
        relax                   0.001;
        
        neighbourRegionName     phiI;
        neighbourPatchName      phiI_to_phiE1;
        neighbourFieldName      phi;
        etaSign                 1;
        fluidPhaseName               air;
        fluidPatchName          air_to_electrolyte;
        secondOrder             false;
        nonOrthCorr             true;
        value                   $internalField;
    }
    
    phiEC_to_phi0
    {
        type            zeroGradient;
    }
    
    interconnectSides
    {
        type            zeroGradient;
    }
    
	cathodeSides
    {
        type            zeroGradient;
    }
    
	anodeSides
    {
        type            zeroGradient;
    }
    
	phiE_to_phi0
    {
        type            zeroGradient;
    }
}



FoamFile
{
    version         2.0;
    format          ascii;
    class           dictionary;
    object          fvSchemes;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    default         steadyState;
}

gradSchemes
{
    default         Gauss linear;
}

divSchemes
{
    default                 none;
    div(rhoCpPhi,T)         Gauss limitedLinear 1;
}

laplacianSchemes
{
    default              none;
    laplacian(k,T)       Gauss harmonic corrected;
}

interpolationSchemes
{
    default         harmonic;
    interpolate(T1)  harmonic;
    interpolate(T2)  harmonic;
    interpolate(k)  harmonic;
}

snGradSchemes
{
    default         corrected;
}




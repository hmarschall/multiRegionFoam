FoamFile
{
    version         2.0;
    format          ascii;
    class           dictionary;
    object          fvSchemes;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    default         steadyState;
}

gradSchemes
{
    default         Gauss linear;
    grad(p)         Gauss linear;
}

divSchemes
{
    default         none;
}

laplacianSchemes
{
    default                none;
    laplacian(sigma,phi)        Gauss harmonic corrected;
}

interpolationSchemes
{
    default            linear;
    interpolate(rho)   harmonic;
    interpolate(T)     harmonic;
}

snGradSchemes
{
    default         corrected;
}

// ************************************************************************* //

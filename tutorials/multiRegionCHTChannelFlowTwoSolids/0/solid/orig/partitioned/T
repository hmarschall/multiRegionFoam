FoamFile
{
    version         2.0;
    format          ascii;
    class           volScalarField;
    object          T;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //


dimensions      [0 0 0 1 0 0 0];

internalField   uniform 300;

boundaryField
{
    top
    {
       type                     regionCoupleJump;
       neighbourRegionName      fluid;
       neighbourPatchName       bottom;
       neighbourFieldName       T;
       k			k;
       K			1.0;
       value                    $internalField;
    }
    bottom
    {
       type                     regionCoupleFlux;
       neighbourRegionName      support;
       neighbourPatchName       top;
       neighbourFieldName       T;
       k			k;
       value                    $internalField;
    }
    left
    {
        type            		zeroGradient;
    }
    right
    {
        type            		zeroGradient;
    }
    frontAndBack
    {
        type            		empty;
    }
}


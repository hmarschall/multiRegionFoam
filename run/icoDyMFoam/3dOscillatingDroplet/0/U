FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    location    "0";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    freeSurface
    {
        type            freeSurfaceVelocity;
        secondOrder     yes;
        nonOrthCorr     yes;
        value           uniform (0 0 0);
//        type            fixedGradient;
//        gradient        uniform (0 0 0);
    }
}

